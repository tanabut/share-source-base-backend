{
  "name": "share-source-base",
  "private": true,
  "version": "1.0.0",
  "description": "Contains api, cms-api, core for connection DB and packages [logger, env, types]",
  "repository": "git@gitlab.com:share-source-base/share-source-base.git",
  "main": "index.js",
  "workspaces": [
    "api",
    "cms-api",
    "core",
    "packages/*"
  ],
  "scripts": {
    "postinstall": "husky install",
    "clean": "rimraf 'packages/*/dist' 'packages/*/tsconfig.tsbuildinfo' 'packages/*/.eslintcache' 'core/dist' 'data-etl/dist' 'cms-api/dist'",
    "dev": "node ./scripts/dev.js \"$@\"",
    "build": "node ./scripts/build.js \"$@\"",
    "test:unit": "jest",
    "eslint": "eslint '*/src/**/*' --ext .js,.ts,.tsx,.json --max-warnings 567",
    "eslint:fix": "eslint '*/src**/*' --ext .js,.ts,.tsx,.json --fix",
    "stylelint": "stylelint '**/*.{css,scss}'",
    "stylelint:fix": "prettier --write '**/*.{css,scss}' && stylelint --fix '**/*.{css,scss}'",
    "lint": "yarn eslint &&  yarn stylelint",
    "lint:fix": "yarn eslint:fix && yarn stylelint:fix"
  },
  "resolutions": {
    "@types/koa-joi-router": "5.2.5",
    "@types/koa": "2.13.1",
    "@types/node": "15.0.1",
    "env-var": "7.0.0",
    "koa-joi-router": "7.0.0",
    "koa": "2.13.1",
    "typeorm": "0.2.31",
    "typescript": "4.2.4"
  },
  "devDependencies": {
    "@types/concurrently": "^6.0.1",
    "@types/node": "^15.0.1",
    "@types/rimraf": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "babel-jest": "^26.6.3",
    "concurrently": "^6.0.2",
    "dotenv": "^8.2.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.24.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.2.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-environment-node": "^26.6.2",
    "jest-junit": "^12.0.0",
    "jest-pnp-resolver": "^1.2.2",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "prettier-plugin-style-order": "^0.2.2",
    "rimraf": "^3.0.2",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^4.0.0",
    "stylelint-declaration-use-variable": "^1.7.2",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.2.0",
    "stylelint-scss": "^3.19.0",
    "ts-jest": "^26.5.5",
    "typescript": "4.2.4"
  }
}
